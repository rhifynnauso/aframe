{
  "name": "mozvr-gazebo",
  "version": "0.1.9",
  "homepage": "https://github.com/MozVR/vr-markup",
  "license": "MIT",
  "main": "src/vr-markup.js",
  "dependencies": {
    "document-register-element": "^0.4.5",
    "tween.js": "^15.0.0"
  },
  "devDependencies": {
    "browserify": "^11.0.1",
    "budo": "^4.2.1",
    "crass": "^0.7.7",
    "garnish": "^2.3.0",
    "gh-pages": "^0.4.0",
    "karma": "^0.13.9",
    "karma-chai-shallow-deep-equal" : "0.0.4",
    "karma-firefox-launcher": "^0.1.4",
    "karma-mocha": "^0.1.10",
    "karma-mocha-reporter": "^1.1.0",
    "karma-sinon-chai": "^0.3.0",
    "karma-browserify": "4.3.0",
    "replace": "^0.3.0",
    "uglifyjs": "^2.4.10",
    "mozilla-download": "^1.0.5"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run build && budo src/vr-markup.js:build/vr-markup.js --debug --verbose --live --port 9000 -- -r ./src/vr-markup.js:vr-markup | garnish -v",
    "build": "mkdir -p build && browserify -r ./src/vr-markup.js:vr-markup -o build/vr-markup.js --debug",
    "dist": "rm -rf dist/ && mkdir -p dist/ && npm run dist:js:dev && npm run dist:js:min && npm run dist:css:dev && npm run dist:css:min &&  git commit -am 'Bump dist'",
    "dist:js:dev": "browserify -r ./src/vr-markup.js:vr-markup -o dist/vr-markup.js --debug",
    "dist:js:min": "browserify -r ./src/vr-markup.js:vr-markup | uglifyjs -cm > dist/vr-markup.min.js",
    "dist:css:dev": "cp ./style/vr-markup.css dist/.",
    "dist:css:min": "crass ./style/vr-markup.css > dist/vr-markup.min.css",
    "replacepaths": "replace '../build/vr-markup.js' '../dist/vr-markup.min.js' gh-pages/ -r && replace '../style/vr-markup.css' '../dist/vr-markup.min.css' gh-pages/ -r",
    "predeploy": "mkdir -p gh-pages && cp -r {components,dist,examples} gh-pages/. && npm run replacepaths",
    "deploy": "gh-pages -d gh-pages && rm -rf gh-pages",
    "release": "npm version patch --minor && npm login && npm publish",
    "test": "karma start ./test/karma.conf.js",
    "test:ci": "karma start ./test/karma.conf.js --single-run"
  },
  "repository": "MozVR/vr-markup",
  "bugs": {
    "url": "https://github.com/MozVR/vr-markup/issues"
  }
}
